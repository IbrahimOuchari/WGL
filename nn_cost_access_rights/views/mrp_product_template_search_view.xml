<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_mrp_product_template_search_view" model="ir.ui.view">
        <field name="name">custom.product.template.search.costs</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">

            <xpath expr="//search" position="inside">
                <separator/>

                <!-- BoM Cost -->
                <filter name="filter_bom_cost_lte_0" string="Coût de la nomenclature &lt;= 0" domain="[('bom_cost','&lt;=',0)]"/>

                <filter name="filter_exploitation_cost_lte_0" string="Coût d'exploitation &lt;= 0" domain="[('exploitation_cost','&lt;=',0)]"/>


                <filter name="filter_standard_price_lte_0" string="Coût &lt;= 0" domain="[('standard_price','&lt;=',0)]"/>


                <filter name="filter_list_price_lte_0" string="Prix de vente &lt;= 0" domain="[('list_price','&lt;=',0)]"/>


                <filter name="filter_marge_brute_lte_0" string="Marge Brute &lt;= 0" domain="[('marge_brute','&lt;=',0)]"/>
            </xpath>

        </field>
    </record>
</odoo>
