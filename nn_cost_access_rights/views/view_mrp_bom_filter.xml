<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_mrp_bom_search_view" model="ir.ui.view">
        <field name="name">custom.mrp.bom.search.costs</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.view_mrp_bom_filter"/>
        <field name="arch" type="xml">

            <xpath expr="//filter" position="after">
                <separator/>

                <!-- Total Cost -->
                <filter name="filter_total_cost_gt_0" string="Co没t Total > 0" domain="[('total_cost','>',0)]"/>
                <filter name="filter_total_cost_lte_0" string="Co没t Total &lt;= 0" domain="[('total_cost','&lt;=',0)]"/>

                <separator/>

                <!-- Cost Product -->
                <filter name="filter_cost_product_gt_0" string="Co没t Produit > 0" domain="[('cost_product','>',0)]"/>
                <filter name="filter_cost_product_lte_0" string="Co没t Produit &lt;= 0" domain="[('cost_product','&lt;=',0)]"/>

                <separator/>

                <!-- Unit Price -->
                <filter name="filter_price_unit_gt_0" string="Prix Unitaire > 0" domain="[('price_unit','>',0)]"/>
                <filter name="filter_price_unit_lte_0" string="Prix Unitaire &lt;= 0" domain="[('price_unit','&lt;=',0)]"/>

                <separator/>

                <!-- Gross Margin -->
                <filter name="filter_marge_product_gt_0" string="Marge > 0" domain="[('marge_product','>',0)]"/>
                <filter name="filter_marge_product_lte_0" string="Marge &lt;= 0" domain="[('marge_product','&lt;=',0)]"/>
            </xpath>

        </field>
    </record>
</odoo>
