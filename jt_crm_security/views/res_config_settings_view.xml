<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherited" model="ir.ui.view">
        <field name="name">Res Config Settings Form View Inherited</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='crm']" position="inside">
                <h2>CRM Security</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="access_partner"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="access_partner" string="Default Access to Partner"/>
                            <div class="text-muted">
                                Allow CRM access to internal users by default
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="access_salesperson"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="access_salesperson" string="Default Access to Sales Person"/>
                            <div class="text-muted">
                                Allow CRM access to salesperson by default
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="access_salesmanager"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="access_salesmanager" string="Default Access to Sales Manager"/>
                            <div class="text-muted">
                                Allow CRM access to sales manager by default
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>