<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Added CRM security category -->
        <record model="ir.module.category" id="module_crm_category">
            <field name="name">CRM</field>
        </record>

        <!-- Added CRM User group -->
        <record id="crm_group_user_all" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_crm_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Added CRM Manager group -->
        <record id="crm_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_crm_category"/>
            <field name="implied_ids" eval="[(4, ref('crm_group_user_all'))]"/>
        </record>

        <record id="base.group_erp_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('crm_group_manager'))]"/>
        </record>

        <record id="base.group_system" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('crm_group_manager'))]"/>
        </record>

    </data>
</odoo>