<odoo>
    <!-- Form View -->
    <record id="view_bank_account_form" model="ir.ui.view">
        <field name="name">bank.account.form</field>
        <field name="model">bank.account</field>
        <field name="arch" type="xml">
            <form string="Compte Bancaire">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="rib"/>
                        <field name="iban"/>
                        <field name="bic"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_bank_account_tree" model="ir.ui.view">
        <field name="name">bank.account.tree</field>
        <field name="model">bank.account</field>
        <field name="arch" type="xml">
            <tree string="Comptes Bancaires">
                <field name="name"/>
                <field name="rib"/>
                <field name="iban"/>
                <field name="bic"/>
            </tree>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_bank_account" model="ir.actions.act_window">
        <field name="name">Comptes Bancaires</field>
        <field name="res_model">bank.account</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu under account.account_banks_menu -->
    <menuitem id="menu_bank_account"
              name="Comptes Bancaires"
              parent="account.account_banks_menu"
              action="action_bank_account"
              sequence="10"/>
</odoo>
