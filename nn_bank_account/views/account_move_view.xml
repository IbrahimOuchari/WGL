<odoo>
    <record id="view_account_move_form_inherit_bank_account" model="ir.ui.view">
        <field name="name">account.move.form.inherit.bank.account</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_bank_id']" position="replace">
                <field name="bank_account_id" options="{'no_create': True}"/>
            </xpath>

        </field>
    </record>
</odoo>
