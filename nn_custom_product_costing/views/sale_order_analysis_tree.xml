<odoo>
    <!-- Tree View -->
    <record id="view_product_analysis_tree" model="ir.ui.view">
        <field name="name">view.product.analysis.tree</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree string="Analyse des Produits" create="false" edit="false">
                <field name="name" string="Produit" />
                <field name="description_sale" string="Description" optional="hide"/>
                <field name="default_code" string="Réf"/>
                <field name="list_price" string="Prix de vente"/>
                <field name="bom_cost" string="Coût de la Nomenclature" optional="hide"/>
                <field name="exploitation_cost" string="Coût d'Exploitation" optional="hide"/>
                <field name="total_cost" string="Coût de Revient Total"/>
                <field name="bom_count" string="Nombre de Nomenclatures" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_product_analysis_search" model="ir.ui.view">
        <field name="name">view.product.analysis.search</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Produit"/>
                <field name="default_code" string="Réf"/>
                <separator/>
                <!-- Using bom_ids instead of bom_count -->
                <filter name="has_bom" string="Avec Nomenclature" domain="[('bom_ids', '!=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_category" string="Catégorie" context="{'group_by': 'categ_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Window with default search filter -->
    <record id="action_product_analysis" model="ir.actions.act_window">
        <field name="name">Analyse des Produits</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_product_analysis_tree"/>
        <field name="search_view_id" ref="view_product_analysis_search"/>
        <field name="context">{'search_default_has_bom': 1}</field>
        <field name="target">current</field>
    </record>

    <menuitem id="menu_product_analysis" name="Analyse des Produits" parent="sale.menu_sale_report" action="action_product_analysis" sequence="10"/>
</odoo>