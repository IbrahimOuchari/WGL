<odoo>
    <record id="product_template_group_product_pricing" model="ir.ui.view">
        <field name="name">pt.product.pricing</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='pricing']" position="after">
                <label name="discount_rate" for="discount_rate"  attrs="{'invisible':[('sale_ok','=',False)]}" />

                <div name="product_pricing" attrs="{'invisible':[('sale_ok','=',False)]}">

                    <!-- Put both fields inline with spacing -->
                    <field name="discount_rate" class="oe_inline"/>


                </div>
                <label name="pu_after_discount" for="pu_after_discount"  attrs="{'invisible':[('sale_ok','=',False)]}"/>
                <div name="product_pricing" attrs="{'invisible':[('sale_ok','=',False)]}">

                    <!-- Put both fields inline with spacing -->

                    <field name="pu_after_discount" class="oe_inline"/>

                </div>
            </xpath>
        </field>
    </record>
</odoo>
