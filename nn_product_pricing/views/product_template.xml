<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_template_group_product_pricing" model="ir.ui.view">
        <field name="name">pt.product.pricing</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='pricing']" position="after">
                <div name="product_pricing" attrs="{'invisible':[('sale_ok','=',False)]}">

                    <!-- Discount Rate field with inline label -->
                    <div>
                        <label for="discount_rate"/>
                        <field name="discount_rate" class="oe_inline"/>


                    </div>

                    <!-- Price After Discount field with inline label -->
                    <div>
                        <label for="pu_after_discount"/>
                        <field name="pu_after_discount" class="oe_inline"/>

                    </div>

                </div>
            </xpath>


        </field>

    </record>


</odoo>


