<odoo>
    <record id="product_template_standard_price_fix" model="ir.ui.view">
        <field name="name">product.template.custom.cost.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="inside">
                <field name="new_purchase_order" invisible="1"/>
                <field name="standard_price_refreshed" invisible="1"/>
                                <group>
                                    <field name="last_purchase_line_ids" invisible="1">
                                        <tree default_order='date_order desc'>
                                            <field name="order_id"/>
                                            <!--        <field name="product_id" style="width:10;"/>-->
                                            <field name="partner_id"/>
                                            <field name="price_unit"/>
                                            <field name="date_order"/>
                                            <field name="state"/>
                                        </tree>


                                    </field>


                                </group>
            </xpath>
        </field>
    </record>
</odoo>
