<odoo>
    <!-- Inherit Product Template Form -->


    <!-- Inherit Product Product Form -->
    <record id="product_product_standard_price_fix" model="ir.ui.view">
        <field name="name">product.product.custom.cost.inherited</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">

            <!-- Hidden technical fields -->
            <xpath expr="//page[@name='general_information']" position="inside">
                <field name="new_purchase_order" invisible="1"/>
                <field name="standard_price_refreshed" invisible="1"/>
            </xpath>

            <!-- Hide seller_ids -->
            <xpath expr="//field[@name='seller_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- Add last purchase line list -->
            <xpath expr="//field[@name='seller_ids']" position="after">
                <group>
                    <field name="last_purchase_line_ids" invisible="0">
                        <tree default_order="date_order desc">
                            <field name="order_id"/>
                            <field name="partner_id"/>
                            <field name="price_unit"/>
                            <field name="date_order"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
